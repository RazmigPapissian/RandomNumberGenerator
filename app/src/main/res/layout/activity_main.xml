<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.papissian.razzle.randomnumbergenerator.MainActivity">

    <TextView
        android:id="@+id/string_input"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Input number range"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/input_min"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:inputType="number"
        android:maxLength="12"
        android:hint="ex: 55"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/string_input"/>

    <TextView
        android:id="@+id/to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_alignTop="@+id/input_min"
        android:text="to"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/input_max"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:inputType="number"
        android:maxLength="12"
        android:layout_marginRight="10dp"
        android:hint="ex: 1000"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/string_input"/>

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_min"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Generate Random Number"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_below="@id/calculate"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"/>


</RelativeLayout>
